{
  "extends": "./tsconfig-strict.json",
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "declaration": true,
    "target": "esnext"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "index.ts"]
}
