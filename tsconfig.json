{
  "extends": "./tsconfig-strict.json",
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "declaration": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "build",
    "scripts",
    "playground"
  ]
}
